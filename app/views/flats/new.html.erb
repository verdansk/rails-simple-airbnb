<div class="navbar">
  <h1>Simple Airbnb</h1>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-primary"%>
</div>
<div class="card-container">
<h1>Add a flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit "Add Flat", class: "btn btn-primary" %>
<% end %>
</div>
