<div class="card-container">
<h1>Add a flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit "Edit flat", class: "btn btn-primary" %>
<% end %>
</div>
